/* pages/slideshow/slideshow.wxss */
.swiper-container{
  height: 150px;
}
.item{
  height: 100%;
  line-height: 150px;
  text-align: center;
}
swiper-item:nth-child(1) .item{
  background-color: indigo;
}
swiper-item:nth-child(2) .item{
  background-color: greenyellow;
}
swiper-item:nth-child(3) .item{
  background-color: blue;
}

image{
  border: 1px solid;
}
